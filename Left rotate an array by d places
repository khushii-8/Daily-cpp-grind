#include <bits/stdc++.h>
using namespace std;

void leftRotate(vector<int>& arr, int d) {
    int n = arr.size();
    d = d % n; // handle cases when d > n

    vector<int> temp;
    // store first d elements
    for(int i = 0; i < d; i++) temp.push_back(arr[i]);

    // shift the rest
    for(int i = d; i < n; i++) arr[i-d] = arr[i];

    // put back the d elements at the end
    for(int i = 0; i < d; i++) arr[n-d+i] = temp[i];
}

int main() {
    vector<int> arr = {1, 2, 3, 4, 5, 6, 7};
    int d = 2;

    leftRotate(arr, d);

    cout << "Array after rotation: ";
    for(int x : arr) cout << x << " ";
    return 0;
}
