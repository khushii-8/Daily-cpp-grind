#include <bits/stdc++.h>
using namespace std;

// Insert element at the bottom of stack
void insertAtBottom(stack<int> &st, int x) {
    if (st.empty()) {
        st.push(x);
        return;
    }
    int temp = st.top();
    st.pop();
    insertAtBottom(st, x);
    st.push(temp);
}

// Reverse the stack using recursion
void reverseStack(stack<int> &st) {
    if (st.empty()) return;

    int top = st.top();
    st.pop();

    reverseStack(st);        // reverse smaller stack
    insertAtBottom(st, top); // put element at bottom
}

// Print stack
void printStack(stack<int> st) {
    while (!st.empty()) {
        cout << st.top() << " ";
        st.pop();
    }
    cout << endl;
}

int main() {
    stack<int> st;
    st.push(1);
    st.push(2);
    st.push(3);
    st.push(4);

    cout << "Original Stack: ";
    printStack(st);

    reverseStack(st);

    cout << "Reversed Stack: ";
    printStack(st);

    return 0;
}
