#include <iostream>
#include <string>
using namespace std;

int myAtoi(string s) {
    int i = 0, n = s.size();
    int sign = 1;
    int result = 0;

    // skip spaces
    while (i < n && s[i] == ' ') i++;

    // check sign
    if (i < n && (s[i] == '+' || s[i] == '-')) {
        if (s[i] == '-') sign = -1;
        i++;
    }

    // read digits
    while (i < n && isdigit(s[i])) {
        result = result * 10 + (s[i] - '0');
        i++;
    }

    return result * sign;
}

int main() {
    cout << myAtoi("   -42") << endl;          // -42
    cout << myAtoi("4193 with words") << endl; // 4193
    cout << myAtoi("   +123") << endl;         // 123
    cout << myAtoi("abc123") << endl;          // 0
    return 0;
}
